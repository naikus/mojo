<?xml version='1.0' encoding='utf-8'?>
  <widget id="org.mojojs.starter" version="0.0.1"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Starter App</name>
  <description>
    A Quick starter application for mojo mobile
  </description>
  <author email="aniketn3@gmail.com" href="http://github.com/naikus">
    Naikus
  </author>
  
  <content src="index.html" />
  <icon src="res/launcher-icon.png" />
  
  <!-- ========================= Whitelist plugin configuration ================================ -->
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
 

  
  
  <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
  <plugin name="cordova-plugin-dialogs" spec="~1.1.1" />
  <plugin name="cordova-plugin-vibration" spec="~1.2.0" />
  <plugin name="cordova-plugin-network-information" spec="~1.0.1" />
  <plugin name="cordova-plugin-whitelist" spec="~1.0.0" />
  

  
  
  <preference name="Orientation" value="portrait" />
  <preference name="SplashScreen" value="res/splash" />
  <preference name="AutoHideSplashScreen" value="true" />
  <preference name="SplashScreenDelay" value="3000" />
  <preference name="StatusBarOverlaysWebView" value="false" />
  <preference name="StatusBarStyle" value="default" />

  <!-- ios only -->
  <preference name="target-device" value="universal" />
  <preference name="deployment-target" value="6.0" />
  
  <!-- you can use any density that exists in the Android project -->
  <platform name="android">
    <splash src="res/splash.png" density="port-mdpi" />
    <splash src="res/splash.png" density="port-hdpi" />
    <splash src="res/splash.png" density="port-xhdpi" />
    <splash src="res/splash.png" density="port-xxhdpi" />
    <splash src="res/splash.png" density="port-xxxhdpi" />
  </platform>

  <!-- images are determined by width and height. The following are supported -->
  <platform name="ios">
    <splash src="res/splash.png" width="320" height="480"/>
    <splash src="res/splash.png" width="640" height="960"/>
    <splash src="res/splash.png" width="768" height="1024"/>
    <splash src="res/splash.png" width="1536" height="2048"/>
    <splash src="res/splash.png" width="1024" height="768"/>
    <splash src="res/splash.png" width="2048" height="1536"/>
    <splash src="res/splash.png" width="640" height="1136"/>
    <splash src="res/splash.png" width="750" height="1334"/>
    <splash src="res/splash.png" width="1242" height="2208"/>
    <splash src="res/splash.png" width="2208" height="1242"/>
  </platform>

</widget>
